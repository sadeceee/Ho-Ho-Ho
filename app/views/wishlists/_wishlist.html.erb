<div class="col-md-4">
  <div class="wishlist-box">

    <%= link_to wishlist do %>
        <table>
          <thead>
          <tr>
            <th><%= wishlist.title %> (<%= number_to_currency(wishlist.get_wishlist_sum) %>)</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td><%=  wishlist.description  %></td>
          </tr>
            <% wishlist.wishlist_items.each_with_index do |witem, index| %>
              <tr>
                <% if index < 3 %>
                  <td id="point">-</td>
                  <td id="title"><%= witem.title %></td>
                  <td id="price"><%= number_to_currency(witem.price) %></td>
                <% else %>
                  <td> more..</td>
                  <% break %>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
    <% end %>
  </div>
</div>
